# Production Environment Configuration
# Copy this file to .env.production for production builds

# Backend API Configuration (Update these URLs for production)
VITE_API_BASE_URL=https://your-production-backend.com
VITE_WS_BASE_URL=wss://your-production-backend.com

# Production Environment
VITE_APP_ENV=production

# API Configuration
VITE_API_TIMEOUT=15000

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=3

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=1000
VITE_TYPING_TIMEOUT=3000

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Debug Mode (should be false in production)
VITE_DEBUG_MODE=false
